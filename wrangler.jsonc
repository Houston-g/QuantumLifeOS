{
  "name": "rest-express-fullstack",
  "compatibility_date": "2025-12-03",

  // Worker backend entry point
  "main": "dist/index.cjs",

  // Static frontend assets
  "assets": {
    "directory": "./dist/public"
  },

  // Route API requests to Worker, everything else serves frontend
  "routes": [
    { "pattern": "*/api/*", "script": "rest-express-fullstack" },
    { "pattern": "*", "serve_assets": true }
  ]
}
